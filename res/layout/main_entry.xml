<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="8dp"
              android:paddingTop="7dp"
              android:paddingBottom="8dp"
              android:background="@drawable/list_background"
        >

    <!--<ImageView xmlns:android="http://schemas.android.com/apk/res/android"-->
               <!--android:background="#AAAAAA"-->
               <!--android:layout_width="10dp"-->
               <!--android:layout_height="fill_parent"-->
            <!--/>-->


    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
               android:id="@+id/main_entry_image"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_marginTop="2.333dp"
               android:layout_marginRight="8dp"
               android:background="@drawable/gray_border"
               android:maxWidth="96dp"
               android:maxHeight="72dp"
            />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="-2dp"
                  android:layout_weight="1"
            >
        <com.larvalabs.sneaker.EllipsizingTextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_entry_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:minLines="3"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingRight="2dp"
                />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_entry_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#707070"
                android:textSize="12sp"
                android:layout_weight="0"
                android:paddingRight="2dp"
                />

    </LinearLayout>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
               android:id="@+id/main_entry_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/status_button_star"
               android:scaleType="center"
               android:layout_gravity="center_vertical"
               android:layout_weight="0"
            />

</LinearLayout>

